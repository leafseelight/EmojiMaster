<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/code_wechat_pay"
    />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:contentPadding="16dp"
    >


        <TextView
            android:id="@+id/tv_about_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="作者：leafseelight\n\nGithub主页：https://github.com/leafseelight\n\nSina微博：http://weibo.com/u/2598008050"
        />

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="这个Demo实现了\n1.Emoji的输入、展示与过滤;\n2.Emoji的屏蔽"
    />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="donateToMe"
        android:text="点这里，打开支付宝，支持我..."
    />


</LinearLayout>